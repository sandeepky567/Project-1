<% if(success && success.length) { %>    
<div class="alert alert-success alert-dismissible fade show col-6 offset-3 " role="alert" style="margin-top:20px;">
  <%= success %>    
</div>
<% } %>

<% if(error && error.length) { %>    
<div class="alert alert-danger alert-dismissible fade show col-6 offset-3 " role="alert" style="margin-top:20px;">
  <%= error %>    
</div>
<% } %>