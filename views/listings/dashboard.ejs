<% layout('layouts/boilerplate') -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Airbnb Style Page - Modern Layout</title>
    
    <style>
        /* Basic Reset and Global Styles */
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background-color: #f7f7f7;
        }
        
        /* ---------------------------------- */
        /* 1. HERO SECTION STYLING */
        /* ---------------------------------- */
        .hero {
            position: relative;
            height: auto;
            
            display: flex;
            align-items: stretch;
            /* MAINTAINED HERO SECTION HEIGHT */
            padding: 40px 8% 30px 5%; 
            max-width: 1760px;
            margin: 0 auto;
            gap: 0;
        }
        
        .hero-image-container {
            flex: 1;
            position: relative;
            border-radius: 16px;
            overflow: hidden;
            /* MAINTAINED MINIMUM HEIGHT */
            min-height: 500px; 
            margin-left: -168px;
            z-index: 0;
        }
        
        .hero-background-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Search Card Positioning */
        .search-card {
            position: relative;
            z-index: 1;
            width: 100%;
            /* MAINTAINED REDUCED MAX-WIDTH */
            max-width: 350px; 
            background-color: white;
            /* MAINTAINED INCREASED PADDING */
            padding: 34px; 
            border-radius: 16px;
            box-shadow: 0 8px 28px rgba(0, 0, 0, 0.12);
            text-align: center;
            align-self: center;
            flex-shrink: 0;
            order: -1;
        }
        
        .card-title {
            /* MAINTAINED FONT SIZE & MARGIN */
            font-size: 1.4em; 
            font-weight: 600;
            color: #222222;
            margin-top: 0;
            margin-bottom: 6px; 
            text-align: left;
            line-height: 1.2;
        }

        .card-subtitle {
            /* MAINTAINED FONT SIZE & MARGIN */
            font-size: 0.85em;
            color: #717171;
            margin-bottom: 12px; 
            text-align: left;
            line-height: 1.5;
        }
        
        /* Form Layout */
        .search-form {
            display: flex;
            flex-direction: column;
        }
        
        .form-group {
            text-align: left;
            border: 1px solid #B0B0B0;
            border-radius: 8px;
            /* MAINTAINED COMPACT FORM FIELD PADDING */
            padding: 8px 12px; 
            /* MAINTAINED NO VERTICAL MARGIN BETWEEN FIELDS */
            margin-bottom: 0px; 
            background-color: white;
            transition: border-color 0.2s;
        }

        .form-group:first-of-type {
            border-radius: 8px 8px 0 0;
        }

        .form-group:last-of-type:not(.search-button-wrapper) {
            border-radius: 0 0 8px 8px;
            /* MAINTAINED COMPACT BOTTOM MARGIN */
            margin-bottom: 6px; 
        }

        .date-group {
            display: flex;
        }

        .date-group .form-group {
            flex: 1;
            margin-bottom: 0px; 
        }

        .date-group .form-group:first-child {
            border-right: none;
            border-radius: 0;
        }

        .date-group .form-group:last-child {
            border-radius: 0;
        }
        
        .form-group:focus-within {
            border-color: #222222;
            z-index: 2;
        }
        
        .form-group label {
            display: block;
            /* MAINTAINED COMPACT LABEL STYLING */
            font-size: 0.65em; 
            font-weight: 700;
            color: #222222;
            margin-bottom: 2px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .form-group input,
        .form-group select {
            border: none;
            width: 100%;
            /* MAINTAINED COMPACT INPUT FONT SIZE */
            font-size: 0.85em; 
            outline: none;
            color: #222222;
            background: transparent;
            cursor: pointer;
        }

        .form-group select {
            appearance: none;
            background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="%23222222" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>');
            background-repeat: no-repeat;
            background-position: right 0 center;
            background-size: 18px;
            padding-right: 20px;
        }

        .guest-group {
            display: flex;
            gap: 1px;
        }

        .guest-group .form-group {
            flex: 1;
            /* MAINTAINED COMPACT MARGIN */
            margin-bottom: 6px; 
        }

        .guest-group .form-group:first-child {
            border-right: none;
            border-radius: 0 0 0 8px; 
        }

        .guest-group .form-group:last-child {
            border-radius: 0 0 8px 0; 
        }
        
        /* Search Button */
        .search-button {
            background: linear-gradient(to right, #E61E4D 0%, #E31C5F 50%, #D70466 100%);
            color: white;
            font-weight: 600;
            /* MAINTAINED COMPACT BUTTON PADDING */
            padding: 8px 16px; 
            border: none;
            border-radius: 8px;
            cursor: pointer;
            /* MAINTAINED COMPACT FONT SIZE */
            font-size: 0.85em; 
            transition: transform 0.1s;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            margin-top: 0;
        }
        
        .search-button:hover {
            transform: scale(1.02);
        }

        .search-button:active {
            transform: scale(0.98);
        }
        
        /* ---------------------------------- */
        /* 2. FEATURE SECTION STYLING */
        /* ---------------------------------- */
        .features-container {
            max-width: 1200px;
            margin: 80px auto;
            padding: 0 40px;
            display: flex;
        
            /* Updated destination cards wrapper to allow wrapping instead of horizontal scrolling */
        
            justify-content: space-between;
            gap: 60px;
        }
        
        .feature-card {
            flex: 1;
            padding: 0;
            text-align: left;
            background-color: transparent;
        }
        
        .feature-icon {
            width: 48px;
            height: 48px;
            margin-bottom: 16px;
        }

        .feature-title {
            font-size: 1.1em;
            font-weight: 600;
            margin-bottom: 8px;
            color: #222222;
        }
        /* ---------------------------------- */
        /* 3. DESTINATION SECTION STYLING */
        /* ---------------------------------- */
        .destination-section {
            max-width: 1200px;
            margin: 80px auto;
            padding: 0 40px;
        }

        .destination-section h3 {
            font-size: 1.8em;
            font-weight: 600;
            color: #222222;
            margin-bottom: 32px;
        }

        .destination-cards-wrapper {
            display: flex;
            gap: 20px;
            flex-wrap: wrap; /* default: allow wrapping on small screens */
            padding-bottom: 10px;
            justify-content: flex-start;
        }

        .destination-card {
            display: block;
            text-decoration: none;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s, box-shadow 0.2s;
            background-color: white;
            flex: 1 1 100%; /* full width by default on small screens */
            max-width: 100%;
            min-width: 0;
        }

        /* On larger screens, force 4 cards in a single row without horizontal scroll */
        @media (min-width: 992px) {
            .destination-cards-wrapper {
                flex-wrap: nowrap;
                justify-content: space-between;
                overflow: hidden;
            }
            .destination-card {
                flex: 1 1 0;
                /* Calculate max width so 4 cards + 3 gaps fit the row: total gaps = 3 * 20px = 60px */
                max-width: calc((100% - 60px) / 4);
            }
        }

        .destination-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
        }

        .destination-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .card-text-content {
            padding: 16px;
            text-align: left;
        }

        .card-text-content h4 {
            font-size: 1.1em;
            font-weight: 600;
            color: #222222;
            margin: 0 0 4px 0;
        }

        .card-text-content p {
            font-size: 0.9em;
            color: #717171;
            margin: 0;
        }
        
        /* Media Query for Responsiveness */
        @media (max-width: 1200px) {
            .hero {
                /* Adjusted for new height */
                padding: 40px 40px 10px 40px;
            }
            .hero-image-container {
                margin-left: -140px;
                /* Adjusted to new height */
                min-height: 500px;
            }
        }

        @media (max-width: 950px) {
            .hero {
                flex-direction: column;
                padding: 40px 40px;
                gap: 24px;
            }
            .hero-image-container {
                margin-left: 0;
                /* Adjusted to new height for mobile */
                min-height: 450px; 
            }
            .search-card {
                /* MAINTAINED 100% width on smaller screens */
                max-width: 100%;
                align-self: stretch;
                /* MAINTAINED increased padding on smaller screens */
                padding: 24px; 
            }
        }

        @media (max-width: 768px) {
            .hero {
                padding: 24px 24px;
            }
            .features-container {
                flex-direction: column;
                gap: 40px;
                margin: 60px auto;
                padding: 0 24px;
            }
            .destination-section {
                padding: 0 24px;
            }
        }

        @media (max-width: 580px) {
            .hero {
                padding: 20px 20px;
            }
            .hero-image-container {
                min-height: 300px;
            }
            .destination-card {
                width: 70vw;
            }
            .card-title {
                font-size: 1.4em;
            }
            .search-card {
                padding: 24px; 
            }
        }
    </style>
</head>
<body>

    <div class="hero">
        <div class="hero-image-container">
            <img src="https://seawatersports.com/images/activies/slide/hot-air-balloon-in-himachal-timing.png" alt="Hot Air Balloon in Himachal" class="hero-background-image">
        </div>

        <div class="search-card">
            <h1 class="card-title">Find places to stay on BookMyHotels</h1>
            <p class="card-subtitle">Discover entire hotels and rooms perfect for any trip.</p>

            <form class="search-form" action="/search" method="get">
                <div class="form-group location">
                    <label for="location">LOCATION</label>
                    <input type="text" id="location" name="q" placeholder="Anywhere" aria-label="Location">
                </div>

                <div class="date-group">
                    <div class="form-group">
                        <label for="check-in">CHECK IN</label>
                        <input type="text" id="check-in" placeholder="25/08/2025" aria-label="Check in date">
                    </div>
                    <div class="form-group">
                        <label for="check-out">CHECK OUT</label>
                        <input type="text" id="check-out" placeholder="30/08/2025" aria-label="Check out date">
                    </div>
                </div>

                <div class="guest-group">
                    <div class="form-group">
                        <label for="adults">ADULTS</label>
                        <select id="adults">
                            <option value="1">1</option>
                            <option value="2" selected>2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6+</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="children">CHILDREN</label>
                        <select id="children">
                            <option value="0" selected>0</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5+</option>
                        </select>
                    </div>
                </div>

                <button type="submit" class="search-button">
                    Search
                </button>
            </form>
        </div>
    </div>

    <div class="features-container">
        <div class="feature-card">
            <svg class="feature-icon" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
                <path d="M24 0c13.255 0 24 10.745 24 24S37.255 48 24 48 0 37.255 0 24 10.745 0 24 0zm0 2C11.85 2 2 11.85 2 24s9.85 22 22 22 22-9.85 22-22S36.15 2 24 2zm8.5 11.5a1 1 0 011 1v1a1 1 0 01-1 1h-1a1 1 0 01-1-1v-1a1 1 0 011-1h1zm-17 0a1 1 0 011 1v1a1 1 0 01-1 1h-1a1 1 0 01-1-1v-1a1 1 0 011-1h1zm8.5 9l9.5 6-9.5 6-9.5-6 9.5-6z" fill="currentColor"/>
            </svg>
            <h2 class="feature-title">Enjoy some flexibility</h2>
            <p class="feature-text">Stays with flexible cancellation make it easy to rebook if your plans change.</p>
        </div>

        <div class="feature-card">
            <svg class="feature-icon" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
                <path d="M25 2a1 1 0 110 2h-2a1 1 0 110-2h2zM13.5 6.5l1.415 1.414-1.415 1.415-1.414-1.415L13.5 6.5zm21 0l1.414 1.414-1.414 1.415-1.415-1.415L34.5 6.5zM24 8c8.837 0 16 7.163 16 16 0 8.837-7.163 16-16 16-8.837 0-16-7.163-16-16 0-8.837 7.163-16 16-16zm0 2c-7.732 0-14 6.268-14 14s6.268 14 14 14 14-6.268 14-14-6.268-14-14-14zm-9 10a1 1 0 110 2H4a1 1 0 110-2h11zm29 0a1 1 0 110 2H33a1 1 0 110-2h11zM14.086 33.086l1.414 1.414-1.414 1.415-1.415-1.415 1.415-1.414zm19.828 0l1.415 1.414-1.415 1.415-1.414-1.415 1.414-1.414zM25 41a1 1 0 110 2h-2a1 1 0 110-2h2zm-1-17v6h6v2h-6v6h-2v-6h-6v-2h6v-6h2z" fill="currentColor"/>
            </svg>
            <h2 class="feature-title">More than 7M active listings</h2>
            <p class="feature-text">Join more than 1 billion guests who've found getaways in over 220 countries and destinations.</p>
        </div>

        <div class="feature-card">
            <svg class="feature-icon" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
                <path d="M24 0c13.255 0 24 10.745 24 24S37.255 48 24 48 0 37.255 0 24 10.745 0 24 0zm0 2C11.85 2 2 11.85 2 24s9.85 22 22 22 22-9.85 22-22S36.15 2 24 2zm0 6c8.837 0 16 7.163 16 16s-7.163 16-16 16S8 32.837 8 24 15.163 8 24 8zm0 2c-7.732 0-14 6.268-14 14s6.268 14 14 14 14-6.268 14-14-6.268-14-14-14zm-6 8h4v4h4v-4h4v4h-4v4h4v4h-4v-4h-4v4h-4v-4h-4v-4h4v-4zm2 2v4h4v-4h-4z" fill="currentColor"/>
            </svg>
            <h2 class="feature-title">100+ filters for tailored stays</h2>
            <p class="feature-text">Pick your price range, the number of rooms you want and other key amenities to find the stay that fits your needs.</p>
        </div>
    </div>

    <div class="destination-section">
        <h3>Explore stays in trending destinations</h3>
        <div class="destination-cards-wrapper">
            <a href="/listings/agra" class="destination-card">
                <img src="https://www.onthegotours.com/repository/The-Taj-Mahal--India-Tours--On-The-Go-Tours-298431462895266.jpg" alt="Agra">
                <div class="card-text-content">
                    <h4>Agra</h4>
                    <p>Uttar Pradesh</p>
                </div>
            </a>
            <a href="/listings/varanasi" class="destination-card">
                <img src="https://visitkashi.in/backend/admin/product_images/168128064972.jpg" alt="Varanasi">
                <div class="card-text-content">
                    <h4>Varanasi</h4>
                    <p>Uttar Pradesh</p>
                </div>
            </a>
            <a href="/listings/shimla" class="destination-card">
                <img src="https://c.ndtvimg.com/2025-01/tuhgraag_shimla_625x300_31_January_25.jpg?im=FaceCrop,algorithm=dnn,width=1200,height=738" alt="Shimla">
                <div class="card-text-content">
                    <h4>Shimla</h4>
                    <p>Himachal Pradesh</p>
                </div>
            </a>
            <a href="/listings/udaipur" class="destination-card">
                <img src="https://s7ap1.scene7.com/is/image/incredibleindia/lake-pichola-udaipur-rajasthan-2-attr-hero?qlt=82&ts=1742161994371" alt="Udaipur">
                <div class="card-text-content">
                    <h4>Udaipur</h4>
                    <p>Rajasthan</p>
                </div>
            </a>
        </div>
    </div>

</body>
</html>