<% layout('layouts/boilerplate') -%>

    <div class="row mt-3">
         <div class="col-8 offset-2">
    <b><h3>Listing Details</h3></b>
     </div>

     <div class="card col-6 offset-2 show-card">
       <img src="<%= listing.image ? listing.image : '/images/default.jpg' %>" 
     class="card-img-top show-img" 
     alt="listing_image"
     style="height: 30rem;">
              <b><%= listing.title %></b><br>
              <%= listing.description %>
            </p><br>
            <p>&#x20b9;<%= listing.price.toLocaleString("en-IN") %>/night</p>
            <p><%= listing.location %></p>
            <p><%= listing.country %></p>
     </div>
   </div>

<br />
<div class="btns">
  <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-2">Edit</a>

  <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
    <button class="btn btn-dark  offset-4">Delete</button>
  </form>
</div>
<hr />
<div class="mb-3">
  <h4>Leave a Review</h4>
  <form action="/listings/<%= listing._id %>/reviews" class="needs-validation" method="POST">
    <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating:</label>
      <input type="range" id="rating" name="review[rating]" min="1" max="5" class="form-range">
    </div>
    <div class="mb-3 mt-3">
      <label for="comment" class="form-label">Comment:</label>
      <textarea required class="form-control" id="comment" name="review[comment]" rows="10" cols="30"></textarea>
    </div> 
    <button type="submit" class="btn btn-outline-dark">Submit Review</button>
  </form>
      <hr>
      <h4>Reviews</h4>
      <p> <%=listing.reviews%> </p>
</div>
 </div>
<script src="/js/scripts.js"> </script>

